<UserControl x:Class="SistSeguridad.UserControls.LedControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SistSeguridad.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="100">
    <Grid>
        <Ellipse Name="Bulb" HorizontalAlignment="Center" Height="70" Stroke="DarkSlateGray" StrokeThickness="2" VerticalAlignment="Center" Width="70">
            <Ellipse.Fill>
                <RadialGradientBrush>
                    <GradientStop Color="Green" Offset="0.6"/>
                    <GradientStop Color="GreenYellow" Offset="0"/>
                </RadialGradientBrush>
            </Ellipse.Fill>
        </Ellipse>
        <Ellipse x:Name="CornerLight" Margin="2"  Height="70"  VerticalAlignment="Center" Width="70">
        <Ellipse.Fill>
            <RadialGradientBrush Center="0.2, 0.2" RadiusX="0.5" RadiusY="0.5">
                <GradientStop Color="White" Offset="0"/>
                <GradientStop Color="Transparent" Offset="0.8"/>
            </RadialGradientBrush>
        </Ellipse.Fill>
        </Ellipse>

    </Grid>
</UserControl>
