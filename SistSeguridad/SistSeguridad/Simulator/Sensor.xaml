<UserControl x:Class="SistSeguridad.Simulator.Sensor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SistSeguridad.Simulator"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="150">
    <Grid MaxHeight="100" MaxWidth="150">
        <CheckBox x:Name="AlarmStatus" Content="Activate" HorizontalAlignment="Center" VerticalAlignment="Top" Width="74" Margin="0,10,0,0" Checked="AlarmStatus_Checked"/>
        <RadioButton x:Name="Zona0" Content="0" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="39,42,0,42" />
        <RadioButton x:Name="Zona1" Content="1" HorizontalAlignment="Left"  VerticalAlignment="Center" Margin="83,42,0,42"/>
        <TextBlock HorizontalAlignment="Center"  TextWrapping="Wrap" VerticalAlignment="Center" Margin="0,50,0,0" Text="{Binding Path=SensorName}" />
        <Border BorderBrush="Black" BorderThickness="3" HorizontalAlignment="Left" Height="100" VerticalAlignment="Top" Width="150"/>

    </Grid>
</UserControl>
