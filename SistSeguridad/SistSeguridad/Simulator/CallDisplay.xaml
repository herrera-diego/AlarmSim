<UserControl x:Class="SistSeguridad.Simulator.CallDisplay"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SistSeguridad.Simulator"
             mc:Ignorable="d" 
            d:DesignHeight="75" d:DesignWidth="150">
    <Grid MaxHeight="75" MaxWidth="150">
        <TextBlock HorizontalAlignment="Left"  TextWrapping="Wrap" VerticalAlignment="Center"  Text="{Binding Path=CallInfo}" Margin="20,0,0,0" Width="110" />
        <Border BorderBrush="Black" BorderThickness="1"/>
    </Grid>
</UserControl>
