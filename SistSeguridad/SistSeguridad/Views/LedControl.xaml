<UserControl x:Class="SistSeguridad.Views.LedControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SistSeguridad.Views"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="100">
    <Grid>
        <Ellipse HorizontalAlignment="Center" Height="70" Stroke="DarkSlateGray" StrokeThickness="10" VerticalAlignment="Center" Width="70">
            <Ellipse.Fill>
                <RadialGradientBrush>
                    <GradientStop Color="#FF045F08" Offset="0.547"/>
                    <GradientStop Color="#FFE6CCCC"/>
                </RadialGradientBrush>
            </Ellipse.Fill>
        </Ellipse>

    </Grid>
</UserControl>
